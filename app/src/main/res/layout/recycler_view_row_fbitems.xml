<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#E6DBCE"
    app:cardElevation="33dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="3dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"

                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"

                    android:background="#6B8A7565"

                    android:columnCount="2"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"

                        android:layout_margin="6dp"
                        android:padding="1dp"
                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                             android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp"
                            android:paddingHorizontal="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:fontFamily="sans-serif-condensed-light"

                                android:paddingLeft="4dp"
                                android:text="Προϊόν "
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal|bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/row_sidfb"
                                android:layout_width="48dp"

                                android:layout_height="25dp"
                                android:hint="176"
                                android:inputType="number"
                                android:maxLength="7"

                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal|bold" />



                             <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
android:layout_gravity="start"
                                >

                                <ImageView
                                    android:id="@+id/imgDeleteFBI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="27dp"
                                     android:background="@drawable/ic_delete"
                                    android:backgroundTint="#FC010202"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_conversion_absoluteHeight="25dp"
                                    tools:layout_conversion_absoluteWidth="24dp" />
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:layout_marginLeft="15dp"
                        android:background="#ABF3F6AF"
                        android:padding="0dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/tanAccent"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@color/tanAccent"
                                android:gravity="right|end"
                                android:orientation="horizontal"
                                android:padding="0dp">


                                <TextView
                                    android:id="@+id/textView39"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:gravity="center_vertical"
                                    android:text="Τιμή  "
                                    android:textColor="#191414"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    tools:gravity="right" />

                                <TextView
                                    android:id="@+id/titlos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"

                                    android:hint="24"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal"
                                    tools:gravity="center" />

                                <TextView
                                    android:id="@+id/textView323"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="3dp"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:gravity="start"
                                    android:text=" €"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/textView333"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text=" / 5"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal"
                                    android:visibility="invisible" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#ABF3F6AF"
                                    android:backgroundTint="#03FFFFFF"
                                    android:gravity="right"

                                    android:orientation="vertical"
                                    android:padding="4dp">

                                    <ImageView
                                        android:id="@+id/imgEditFBI"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_edit"
                                        android:backgroundTint="#213230" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="9dp"
                        android:padding="7dp"

                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="fill_horizontal"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="1dp">

                            <TextView

                                android:id="@+id/row_inamefb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="sans-serif-condensed-light"

                                android:gravity="start"
                                android:hint="H XIONATH"
                                android:inputType="text|textAutoComplete|textAutoCorrect|textCapCharacters"
                                android:paddingLeft="5dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/row_afmfb"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginLeft="0dp"

                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="5"

                                android:inputType="number"
                                android:maxLength="10"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/tanAccent"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                tools:gravity="center_horizontal"
                                tools:ignore="TouchTargetSizeCheck"
                                tools:visibility="invisible" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="14dp">


                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:maxLength="10"
                                android:text="  ΤΜΧ. "
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/row_scountfb"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginLeft="0dp"

                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="5"
                                android:inputType="number"

                                android:maxLength="10"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                tools:gravity="center_horizontal"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                android:id="@+id/row_icategfb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="ΠΑΙΔΙΚΑ"
                                android:inputType="text|textAutoComplete|textAutoCorrect|textCapCharacters"

                                android:maxLength="15"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:background="#AB585A1C"
                        android:padding="4dp"

                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tanAccent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <RatingBar
                                android:id="@+id/ratingBarrowfbc"
                                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="5dp"
                                android:isIndicator="true"
                                android:max="5"
                                android:paddingTop="5dp"
                                android:progressTint="#EF9711"
                                android:rating="2.5"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:stepSize="0.5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>