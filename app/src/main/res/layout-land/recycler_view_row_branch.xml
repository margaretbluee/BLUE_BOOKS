<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#374563"
    app:cardElevation="1dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"

                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"

                    android:background="#607B8F"

                    android:columnCount="2"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="7dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <TextView
                                android:id="@+id/row_brname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="@color/tanAccent"
                                android:fontFamily="monospace"
                                android:hint="ΘΕΣΣΑΛΟΝΙΚΗ"
                                android:maxLength="20"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#ABF3F6AF"
                                android:backgroundTint="#03FFFFFF"

                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/row_brbookstoreid"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light"

                                    android:maxLength="10"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal|bold"
                                    android:visibility="invisible" />

                                <!--   <ImageView
                                    android:id="@+id/imgEditCom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_edit"
                                    android:backgroundTint="#000000" />-->
                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/linearLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <!--  <ImageView
                                    android:id="@+id/imgDeleteCom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="27dp"
                                     android:background="@drawable/ic_delete"
                                    android:backgroundTint="#FC010202"
                                    android:foregroundGravity="right"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_conversion_absoluteHeight="25dp"
                                    tools:layout_conversion_absoluteWidth="24dp" />-->
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="7dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:background="@color/tanAccent"
                                android:orientation="horizontal"
                                android:padding="0dp">


                                <TextView
                                    android:id="@+id/row_brbookstorename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:background="@color/tanAccent"
                                    android:fontFamily="monospace"

                                    android:hint="ΙΑΝΟΣ"
                                    android:maxLength="20"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/row_branch_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_editb" />

                                <ImageView
                                    android:id="@+id/row_branch_delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_deleteb" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/linearLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <!--  <ImageView
                                        android:id="@+id/imgDeleteCom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="27dp"
                                        android:background="@drawable/ic_delete"
                                        android:backgroundTint="#FC010202"
                                        android:foregroundGravity="right"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:layout_conversion_absoluteHeight="25dp"
                                        tools:layout_conversion_absoluteWidth="24dp" />-->
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/tanAccent"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:padding="0dp">

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="7dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp">


                            <TextView
                                android:id="@+id/textVi444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|fill_horizontal"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="center|center_vertical|fill_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                tools:visibility="gone" />

                            <TextView
                                android:id="@+id/row_brafm"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center|fill_horizontal"
android:maxLength="0"
                                android:textStyle="normal"
                                tools:visibility="gone" />

                            <TextView
                                android:id="@+id/textVi4424"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="center|center_vertical|fill_vertical"
                                android:text=" ΤΗΛ. "
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/row_brtel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:background="@color/tanAccent"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="center|center_vertical|fill_vertical"
                                android:maxLength="10"
                                android:text="694448600"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"

                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="7dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/row_brid"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-light"

                            android:gravity="center|center_vertical|fill_vertical"
                            android:maxLength="2"
                             android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="18sp"
                            android:textStyle="normal|bold"
                            android:visibility="invisible"
                            tools:visibility="invisible" />

                        <TextView
                            android:id="@+id/row_bradr"
                            android:text="Mαρτίου 80"
                            android:layout_width="wrap_content"
android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|fill_horizontal"
                            android:fontFamily="sans-serif-condensed-light"
                            android:gravity="center|center_vertical|fill_vertical"

                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="17sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>


                </GridLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>