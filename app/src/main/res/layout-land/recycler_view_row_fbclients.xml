<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#E6DBCE"
    app:cardElevation="33dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"

                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="1dp"

                    android:background="#6B8A7565"

                    android:columnCount="2"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"

                        android:layout_margin="5dp"
                        android:padding="1dp"
                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:fontFamily="sans-serif-condensed-light"

                                android:paddingLeft="15dp"
                                android:text="Πελάτης "
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/row_clidfb"
                                android:layout_width="wrap_content"

                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="176"
                                android:inputType="number"

                                android:maxLength="7"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/row_clratingfb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|end"

                                android:fontFamily="sans-serif-condensed-light"
                                android:inputType="number|numberDecimal"
                                android:maxLength="0"

                                android:text="3.5"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                tools:gravity="center_horizontal"
                                tools:ignore="TouchTargetSizeCheck" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <ImageView
                                    android:id="@+id/imgDeleteFBCl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="27dp"
                                    android:layout_marginStart="16dp"
                                    android:background="@drawable/ic_delete"
                                    android:backgroundTint="#FC010202"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_conversion_absoluteHeight="25dp"
                                    tools:layout_conversion_absoluteWidth="24dp" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:background="#AB585A1C"

                        app:cardCornerRadius="22dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/tanAccent"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:padding="0dp">

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:padding="4dp"

                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:layout_gravity="fill_horizontal"
                            android:background="@color/tanAccent"
                            android:orientation="vertical"
                            android:padding="1dp">

                            <TextView
                                android:id="@+id/row_clnamefb"
                                android:layout_width="160dp"
                                android:layout_height="43dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/tanAccent"
                                android:hint="Public"

                                 android:maxLength="15"
                                android:paddingLeft="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                         android:background="#ABF3F6AF"
                        android:padding="0dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tanAccent"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#ABF3F6AF"
                                android:backgroundTint="#03FFFFFF"
                                android:gravity="end"

                                android:orientation="horizontal"
                                android:padding="4dp">

                                <ImageView
                                    android:id="@+id/imgEditFBCl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_edit"
                                    android:backgroundTint="#000000" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:padding="4dp"

                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"

                            android:padding="0dp">

                            <TextView
                                android:id="@+id/row_clcityfb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:inputType="text|textAutoComplete|textAutoCorrect|textCapCharacters"
                                android:maxLength="20"

                                android:text="ΘΕΣΣΑΛΟΝΙΚΗ"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:background="#AB585A1C"

                        android:padding="4dp"

                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/tanAccent"
                            android:gravity="center|top"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <RatingBar
                                android:id="@+id/ratingBarrowfbc"
                                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="11dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="8dp"
                                android:isIndicator="true"
                                android:max="5"
                                android:progressTint="#EF9711"
                                android:rating="2.5"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:stepSize="0.5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>