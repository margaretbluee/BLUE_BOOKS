<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_afmfb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#374563"
    app:cardElevation="33dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="3dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"

                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"

                    android:background="#607B8F"

                    android:columnCount="2"
                    android:rowCount="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <ImageView
                                android:id="@+id/row_bookstore_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                app:srcCompat="@drawable/ic_deleteb" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center"

                                android:paddingLeft="15dp"
                                android:text="ID"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/row_bisbn"
                                android:layout_width="wrap_content"

                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="3dp"
                                android:hint="176"

                                android:maxLength="7"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|center|center_vertical"
                                android:fontFamily="sans-serif-condensed-light"
                                android:maxLength="15"
                                android:text="    "
                                android:textColor="#191414"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/row_bookstore"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="ΙΑΝΟΣ"
                                android:maxLength="30"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"

                                android:textSize="18sp"

                                android:textStyle="bold"

                                tools:gravity="center_horizontal"
                                tools:ignore="TouchTargetSizeCheck" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_rowWeight="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <ImageView
                                android:id="@+id/row_bookstore_edit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                 app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_editb" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>