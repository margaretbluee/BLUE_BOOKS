<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#374563"
    app:cardElevation="33dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="3dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/tanAccent"
                    android:orientation="horizontal"
                    android:padding="0dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="0"
                    android:layout_margin="6dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="#ABF3F6AF"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/tanAccent"
                        android:orientation="horizontal"
                        android:padding="0dp">


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-condensed-light"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:text="  ΚΑΤΗΓΟΡΙΑ"
                            android:textColor="#191414"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/row_bcategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:ellipsize="end"
                            android:hint="FICTION"
                            android:paddingHorizontal="5dp"
                            android:singleLine="true"

                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/texxxtView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-condensed-light"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:text="  ΣΥΓΓΡΑΦΕΑΣ:"
                            android:textColor="#191414"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/row_bsigrafeas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:ellipsize="end"
                            android:hint="-"
                            android:paddingHorizontal="5dp"
                            android:singleLine="true"

                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="0"
                    android:layout_margin="6dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="#ABF3F6AF"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/tanAccent"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <TextView
                            android:id="@+id/textVieww"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-condensed-light"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:text="  ΤΙΤΛΟΣ:"
                            android:textColor="#191414"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/row_bname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:ellipsize="end"
                            android:hint="-"
                            android:paddingHorizontal="5dp"
                            android:singleLine="true"

                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/pri1ce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:ellipsize="end"
                            android:hint="("
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/row_bprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:ellipsize="end"
                            android:hint="1"
                            android:singleLine="true"

                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/euro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="€"

                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="#191414"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:hint=")"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"

                    android:background="#607B8F"

                    android:columnCount="2"
                    android:rowCount="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ABF3F6AF"
                                android:backgroundTint="#03FFFFFF"
                                android:gravity="start"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/row_bbookstorename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="3dp"
                                    android:ellipsize="end"
                                    android:fontFamily="serif-monospace"
                                    android:hint="IANOS"

                                    android:paddingHorizontal="3dp"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal|bold" />

                                <TextView
                                    android:id="@+id/id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="3dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"

                                    android:text="ID"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/row_bbookstoreid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="3dp"
                                    android:ellipsize="end"

                                    android:hint="1"
                                    android:paddingHorizontal="5dp"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal|bold" />

                                <TextView
                                    android:id="@+id/row_bbranchname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="3dp"
                                    android:ellipsize="end"
                                    android:fontFamily="serif-monospace"
                                    android:hint="IANOS"

                                    android:paddingHorizontal="3dp"
                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal|bold" />


                                <TextView
                                    android:id="@+id/eur"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"

                                    android:text="ID"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/row_bbranchid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="3dp"
                                    android:ellipsize="end"
                                    android:hint="1"
                                    android:paddingHorizontal="5dp"

                                    android:singleLine="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                    android:textColor="#191414"
                                    android:textSize="18sp"
                                    android:textStyle="normal|bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <ImageView
                                android:id="@+id/row_book_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal|center_vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_deleteb" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                android:id="@+id/bisbn"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=" ISBN"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/row_bisbn"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginStart="3dp"
                                android:ellipsize="end"
                                android:hint="1234567890"

                                android:singleLine="true"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <ImageView
                                android:id="@+id/row_book_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal|center_vertical"
                                app:srcCompat="@drawable/ic_editb" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </GridLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>