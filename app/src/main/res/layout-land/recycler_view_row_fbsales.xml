<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardBackgroundColor="#E6DBCE"
    app:cardElevation="33dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="3dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"

                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"

                    android:background="#6B8A7565"

                    android:columnCount="2"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"

                        android:layout_margin="6dp"
                        android:padding="1dp"
                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="1dp"
                            android:paddingHorizontal="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginLeft="8dp"

                                android:fontFamily="sans-serif-condensed-light"
                                android:paddingLeft="4dp"
                                android:text="ΠΩΛΗΣΗ"
                                android:textColor="#191414"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:gravity="center" />


                            <TextView
                                android:id="@+id/row_sidfb"
                                android:layout_width="wrap_content"

                                android:layout_height="25dp"
                                android:layout_marginStart="4dp"
                                android:gravity="left"

                                android:hint="176"
                                android:maxLength="7"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal|bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:gravity="center" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start">

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:layout_marginLeft="15dp"
                        android:background="#ABF3F6AF"
                        android:padding="0dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/tanAccent"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                android:id="@+id/row_sdatefb"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/tanAccent"
                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="30/4/23"

                                android:inputType="text|textAutoComplete|textAutoCorrect|textCapCharacters"
                                android:maxLength="15"
                                android:paddingLeft="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/imgDeleteFBS"
                                android:layout_width="wrap_content"
                                android:layout_height="27dp"
                                android:background="@drawable/ic_delete"
                                android:backgroundTint="#FC010202"
                                tools:layout_conversion_absoluteHeight="25dp"
                                tools:layout_conversion_absoluteWidth="24dp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="9dp"
                        android:padding="7dp"

                        app:cardCornerRadius="33dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="fill_horizontal"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="1dp">

                            <TextView
                                android:id="@+id/row_siname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|fill_horizontal"
                                    android:layout_marginLeft="10dp"
                                android:maxLength="15"
                                android:text="ΕΧΕΙ ΔΙΑΓΡΑΦΤΕΙ"
                                android:textColor="#191414"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                tools:fontFamily="sans-serif-condensed-light" />


                            <TextView
                                android:id="@+id/textVi444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|fill_horizontal"
                                android:layout_marginLeft="5dp"
                                android:maxLength="2"
                                android:text="ID "
                                android:textColor="#8A8585"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                tools:fontFamily="serif" />

                            <TextView
                                android:id="@+id/row_siidfb"
                                android:layout_width="7dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="2dp"

                                android:layout_marginLeft="3dp"
                                android:layout_marginEnd="9dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:maxLength="1"
                                android:text="-"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#6E6969"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="14dp">


                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:maxLength="10"
                                android:text="  ΤΜΧ. "
                                android:textColor="#191414"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/row_scountfb"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginLeft="0dp"

                                android:fontFamily="sans-serif-condensed-light"
                                android:hint="5"
                                android:inputType="number"

                                android:maxLength="10"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#191414"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                tools:gravity="center_horizontal"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:background="@color/tanAccent"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                android:id="@+id/row_scname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|fill_horizontal"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="0"
                                android:maxLength="15"
                                android:textColor="#191414"
                                android:textSize="15sp"
                                android:text="ΕΧΕΙ ΔΙΑΓΡΑΦΤΕΙ"

                                android:textStyle="normal"
                                tools:fontFamily="sans-serif-condensed-light" />


                            <TextView
                                android:id="@+id/textVi2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|fill_horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0"
                                android:maxLength="2"
                                android:text="ID "
                                android:textColor="#8A8585"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                tools:fontFamily="serif" />

                            <TextView
                                android:id="@+id/id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="2dp"

                                android:layout_marginLeft="3dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-condensed-light"
                                android:maxLength="1"
                                android:text="-"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#6E6969"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:background="#ABF3F6AF"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="#929ADD57"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                android:id="@+id/row_sprofitfb5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_marginLeft="12dp"

                                android:fontFamily="sans-serif-condensed-light"

                                android:maxLength="7"
                                android:text="Κέρδος"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck"
                                tools:textStyle="bold" />

                            <TextView
                                android:id="@+id/row_sprofitfb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"

                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"

                                android:gravity="right"
                                android:maxLength="4"
                                android:text="-"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="normal"
                                tools:ignore="TouchTargetSizeCheck"
                                tools:textStyle="bold" />

                            <TextView
                                android:id="@+id/row_sprofitfb7"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_marginLeft="7dp"

                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-light"

                                android:maxLength="1"
                                android:text="€"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="normal"
                                tools:ignore="TouchTargetSizeCheck"
                                tools:textStyle="bold" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>